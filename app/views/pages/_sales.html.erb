<table class="table table-condensed">
  <thead>
    <tr>
      <td>Name</td>
      <td>Date</td>
      <td>Buyer</td>
    </tr>
  </thead>
  <tbody>
    <% @sales.each do |sale| %>
    <tr>
      <td><%= link_to sale.book.name, pickup_path(sale.guid) %></td>
      <td><%= time_ago_in_words(sale.created_at) %> ago</td>
      <td><%= sale.buyer_email %></td>
    </tr>
    <% end %>
  </tbody>
</table>